{
    "name": "gabor-udvari/phlomis",
    "description": "PHP based build tools for Sage using Composer and Robo",
    "authors": [
	{
	    "name": "Gabor Udvari",
	    "email": "gabor.udvari@gmail.com"
	}
    ],
    "license": "MIT",
    "type": "wordpress-theme",
    "repositories" : [
	{
	    "type": "package",
	    "package": {
		"name": "roots/sage",
		"version": "8.2.1",
		"dist": {
		    "url": "https://github.com/roots/sage/archive/8.2.1.zip",
		    "type": "zip"
		},
		"source": {
		    "type": "vcs",
		    "url": "https://github.com/roots/sage.git",
		    "reference": "8.2.1"
		}
	    }
	}
    ],
    "require": {
	"php": ">=5.4.0",
	"fxp/composer-asset-plugin": "*",
	"roots/sage": "8.2.1"
    },
    "require-dev"	: {
	"codegyre/robo": "*",
	"squizlabs/php_codesniffer": "*",
	"leafo/scssphp": "*"	
    },
    "scripts" : {
	"post-install-cmd": [
	    "composer.phar require \"bower-asset/modernizr: 2.8.2\" \"bower-asset/bootstrap-sass-official: 3.3.5\"",
	    "vendor/bin/robo install"
	]
    }
}
